<?
/**
 * @var \advertisement_model[] $banners
 * @var string                 $order
 * @var string                 $viewFile
 */
if ($order == 'V') {
    $col = 12;
} else {
    $col = 12 / count($banners);
}
if ($col == 12) {
    $first = true;
    $count = 0;
    foreach ($banners as $key => $banner) {
        $classes = [];
        if ($first) {
            $classes[] = 'first-child';
            $first = false;
        }
        if (++$count == count($banners)) {
            $classes[] = 'last-child';
        } else {
            $classes[] = 'add-bottom';
        }
        echo image::getBannerHtml($banner, $classes, empty($viewFile) ? null : $viewFile);
    }
} else {
    ?>
    <div class="row">
    <? foreach ($banners as $key => $banner) { ?>
        <div class="col-sm-<?= $col ?>">
            <?= image::getBannerHtml($banner, [], empty($viewFile) ? null : $viewFile) ?>
        </div>
    <? } ?>
    </div><?
}
